/**
 * Implementation of hook_init().
 */
function wurfl_init() {
	$ua = $_SERVER['HTTP_USER_AGENT'];;
	$device = new wurfl();
	$matched = $device->getDeviceCapabilities($ua);
	$GLOBALS['wurfl_device'] = ($matched ? $device : new stdClass());
	// TODO: append user agent to database if not detected
}

